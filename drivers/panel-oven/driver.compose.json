{
  "name": {
    "en": "Panel oven"
  },
  "class": "heater",
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "measure_power",
    "meter_power"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "step": 1
    },
    "measure_temperature": {
      "decimals": 1
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "pair_view"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}